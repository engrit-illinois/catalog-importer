{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "FieldsOfStudy": {
        "type": "object",
        "properties": {
          "Instructions": {
            "type": "string"
          },
          "Fields": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "Type": {
                  "type": "string",
                  "enum": ["Primary", "Secondary"]
                },
                "Instructions": {
                  "type": "string"
                },
                "RequiredHours": {
                  "type": "integer"
                },
                "AreasOfStudy": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "Title": {
                        "type": "string"
                      },
                      "Instructions": {
                        "type": "string"
                      },
                      "Sections": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "Title": {
                              "type": "string"
                            },
                            "Instructions": {
                              "type": "string"
                            },
                            "RequiredCourses": {
                              "type": "array",
                              "items": {
                                "type": "string"
                              }
                            },
                            "ElectiveCourses": {
                              "type": "object",
                              "properties": {
                                "RequiredUnits": {
                                  "type": "integer"
                                },
                                "Courses": {
                                  "type": "array",
                                  "items": {
                                    "type": "string"
                                  }
                                }
                              },
                              "required": ["RequiredUnits", "Courses"]
                            }
                          },
                          "required": ["Title", "RequiredCourses", "ElectiveCourses"]
                        }
                      }
                    },
                    "required": ["Title", "Sections"]
                  }
                }
              },
              "required": ["Type", "RequiredHours", "AreasOfStudy"]
            }
          }
        },
        "required": ["Instructions", "Fields"]
      }
    },
    "required": ["FieldsOfStudy"]
  }
